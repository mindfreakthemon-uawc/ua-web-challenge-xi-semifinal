{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "traceResolution": false,
    "skipDefaultLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "app/**/*.ts"
  ]
}
